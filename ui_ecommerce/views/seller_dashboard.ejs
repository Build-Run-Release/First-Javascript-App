<!DOCTYPE html>
<html>
<head>
    <title>Seller Dashboard</title>
</head>
<body>
    <header>
        <h1>Seller Dashboard</h1>
        <p>Welcome, <%= user.username %></p>
        <a href="/">Home</a> | <a href="/logout">Logout</a>
    </header>

    <section style="background-color: #f0f0f0; padding: 15px; margin: 10px 0;">
        <h3>Payment Setup</h3>
        <p>To receive payments, you must connect your Stripe account.</p>
        <a href="/onboard-seller" style="background-color: #6772e5; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;">Connect with Stripe</a>
    </section>

    <main>
        <h3>Add New Product</h3>
        <form action="/seller/add-product" method="POST">
            <label>Title: <input type="text" name="title" required></label><br>
            <label>Description: <textarea name="description" required></textarea></label><br>
            <label>Price ($): <input type="number" step="0.01" name="price" required></label><br>
            <button type="submit">Add Product</button>
        </form>

        <h3>My Products</h3>
        <ul>
            <% products.forEach(function(product) { %>
                <li><%= product.title %> - $<%= product.price %></li>
            <% }); %>
        </ul>

        <h3>Sales</h3>
        <ul>
            <% orders.forEach(function(order) { %>
                <li>Item ID: <%= order.product_id %> - Amount: $<%= order.seller_amount %> (Fee Deducted) - Status: <%= order.status %></li>
            <% }); %>
        </ul>
    </main>
</body>
</html>
